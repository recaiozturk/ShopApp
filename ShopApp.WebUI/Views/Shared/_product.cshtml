@model  Product

<div class="col-md-4">
    <div class="card">
        <img src="@Model.ImageUrl" alt="@Model.Name"/>
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fa-solid fa-turkish-lira-sign"></i> @Model.Price
            </small>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="bbtn btn-outline-primary btn-sm">Details</a>
            <a href="#" class="bbtn btn-outline-primary btn-sm ml-3">Add To Cart</a>
        </div>
    </div>
</div>