
@model List<OrderListModel>

@{
    ViewData["Title"] = "GetOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<hr />

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-5">
        <thead class="bg-primary text-white">
            <tr>
                <td colspan="2">Order Id: #@order.OrderId</td>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td>
                    <img src="~/img/@orderItem.ImageUrl" width="50" />
                </td>

                <td>@orderItem.Name</td>
                <td>@orderItem.Price</td>
                <td>@orderItem.Quantity</td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Custemer Name:</td>
                <td>@order.FirstName @order.LastName</td>
                <td>Total : @order.TotalPrice()</td>
            </tr>
            <tr>
                <td colspan="2">Adress :</td>
                <td>@order.Adress</td>
            </tr>
            <tr>
                <td colspan="2">Phone :</td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Payment Status :</td>
                <td>@order.PaymentTypes</td>
            </tr>
            <tr>
                <td colspan="2">OrderStatus :</td>
                <td>@order.OrderState</td>
            </tr>
        </tfoot>
    </table>
}

