
@model OrderModel

@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Checkout</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" type="text" name="firstName" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName"  type="text" name="lastName" value="" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label  asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" name="address" class="form-control"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label  asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" type="text" name="city" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" type="text" name="phone" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" type="text" name="email" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info">
                <label class="custom-control-label" for="save-info">Save this information for next time</label>
            </div>
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                    <label class="custom-control-label" for="credit">Credit card</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                    <label class="custom-control-label" for="eft">EFT</label>
                </div>
            </div>
            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardName">Name on Credit Card</label>
                    <input asp-for="@Model.CardName" type="text" name="cartname" value="" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardNumber">Credit Card Number</label>
                    <input asp-for="@Model.CardNumber" type="text" name="cardnumber" value="" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth">Month</label>
                    <input asp-for="@Model.ExpirationMonth" type="text" name="month" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear">Year</label>
                    <input asp-for="@Model.ExpirationYear" type="text" name="year" value="" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <labe asp-for="@Model.Cvv"l>CVV</label>
                    <input asp-for="@Model.Cvv" type="text" name="cvv" value="" class="form-control" />
                </div>
            </div>
            <hr class="mb-4" />
            <button type="submit" class="btn btn-primary btn-lg btn-block">Complete Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">

        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">

            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@item.Name
                            <small>X @item.Quantity</small>
                        </h6>
                        

                    </div>
                    <span class="text-muted">@item.Price TL</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TL)</span>
                <strong>@Model.CartModel.TotalPrice() TL</strong>
            </li>
        </ul>

    </div>
</div>