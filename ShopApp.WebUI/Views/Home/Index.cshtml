

@model ShopApp.WebUI.Models.ProductListModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <li class="list-group-item">Telefon</li>
            <li class="list-group-item">Bilgisayar</li>
            <li class="list-group-item">Elektronik</li>
        </ul>
    </div>

    <div class="col-md-9">

        @Html.Partial("_slider")

        <div class="row mt-3">
            @foreach (var product in Model.Products)
            {
                @*<partial name="_product" for="@product" />*@

                <div class="col-md-4 mt-3">
                    <div class="card">
                        <img src="~/img/@product.ImageUrl" alt="@product.Name" />
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#">@product.Name</a>
                            </h4>
                            <small class="text-muted">
                                <i class="fa-solid fa-turkish-lira-sign"></i> @product.Price
                            </small>
                        </div>

                        <div class="card-footer text-center">
                            <a href="#" class="bbtn btn-outline-primary btn-sm">Details</a>
                            <a href="#" class="bbtn btn-outline-primary btn-sm ml-3">Add To Cart</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>





